{
	"name": "blank-theme",
	"version": "2.0.0",
	"description": "Blank Theme Packages",
	"author": "rtCamp",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prod": "cross-env NODE_ENV=production webpack --mode production --progress && npm run pot",
		"dev": "cross-env NODE_ENV=development webpack --watch --mode development --progress",
		"dev:clean": "rm -rf build/* && cross-env NODE_ENV=development webpack --watch --mode development --progress",
		"clean": "rm -rf build/*",
		"init": "./bin/init.js && npm run pot && rm -rf ../.git ../.github ./bin/ ../languages/blank-theme.pot && npm uninstall replace-in-file prompt-sync",
		"lint-css": "stylelint src/sass/**/*.scss --syntax scss",
		"lint-js": "eslint src/js/",
		"pot": "wp-pot --src '../**/*.php' --dest-file '../languages/blank-theme.pot' --domain 'blank-theme' --package 'Blank Theme' ",
		"precommit": "npm run lint-css && npm run lint-js && npm run pot",
		"test": "jest  --verbose"
	},
	"dependencies": {
		"webfontloader": "^1.6.28"
	},
	"peerDependencies": {
		"postcss": "^8.1.7"
	},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.1",
		"autoprefixer": "^10.0.2",
		"babel-loader": "^8.2.1",
		"clean-webpack-plugin": "^3.0.0",
		"cross-env": "^7.0.2",
		"css-loader": "^5.0.1",
		"cssnano": "^4.1.10",
		"eslint": "^7.13.0",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-loader": "^3.0.3",
		"file-loader": "^6.2.0",
		"foundation-sites": "^6.6.3",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.3.1",
		"node-sass": "^5.0.0",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"postcss-assets": "^5.0.0",
		"postcss-loader": "^4.0.4",
		"postcss-pxtorem": "^5.1.1",
		"postcss-scss": "^3.0.4",
		"postcss-sort-media-queries": "^2.1.11",
		"prompt-sync": "^4.2.0",
		"replace-in-file": "^6.1.0",
		"sass-loader": "^10.1.0",
		"serialize-javascript": "^5.0.1",
		"style-loader": "^2.0.0",
		"stylelint": "^13.7.2",
		"stylelint-config-wordpress": "^17.0.0",
		"stylelint-webpack-plugin": "^2.1.1",
		"uglifyjs-webpack-plugin": "^2.2.0",
		"webpack": "^5.4.0",
		"webpack-cli": "^4.2.0",
		"wp-pot-cli": "^1.5.0"
	},
	"browserslist": [
		"defaults"
	],
	"jest": {
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/"
		],
		"coverageDirectory": "<rootDir>/.jest-coverage/",
		"setupFilesAfterEnv": [
			"<rootDir>/test.setup.js"
		],
		"automock": false
	}
}
